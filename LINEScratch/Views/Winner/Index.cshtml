@model IEnumerable<LINEScratch.ViewModels.ListWinner>

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

    ViewData["Title"] = "得獎名單";
}

<h1>得獎名單</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LineId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PicUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrizeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrizeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LineId)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.PicUrl)" style="width: 100px" />
                </td>
                <td>
                    <span style="font-size: 30px">@Html.DisplayFor(modelItem => item.Name)</span>
                </td>
                <td>
                    <span style="font-size: 30px">@Html.DisplayFor(modelItem => item.PrizeName)</span>

                </td>
                <td>
                    @{
                        string tmp = "AAA_" + @Html.DisplayFor(modelItem => item.PrizeId);
                        Byte[] bytesEncode = System.Text.Encoding.UTF8.GetBytes(tmp);
                        string base64id = Convert.ToBase64String(bytesEncode).Substring(3,7);
                    }
                    @base64id
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        setInterval("location.reload(true);", 5000);
    });
</script>